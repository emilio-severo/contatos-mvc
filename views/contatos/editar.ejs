<!DOCTYPE html>
<html>
<head>
    <%-include('../partials/header'); %>
</head>
<body>
    <div class="container">
        <%- include ('../partials/navbar'); %>
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Edição de um contato</h3><br>
                <form action="/contatos/atualizar" method="POST">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input class="form-control" id="nome" type="text" name="nome"
                            placeholder="Informe o nome do contato." value="<%=contato.nome%>" required>
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input class="form-control" id="email" type="email" name="email"
                            placeholder="Informe o e-mail do contato." value="<%=contato.email%>" required>
                    </div>
                    <div class="form-group">
                        <label for="nascimento">Nascimento</label>
                        <input class="form-control" id="nascimento" type="date" name="nascimento"
                            value="<%=contato.nascimento%>">
                    </div>
                    <div class="form-group">
                        <label for="categoria">Categoria</label>
                        <select id="categoria" name="categoria" class="form-control">
                            <% categorias.forEach( function(categoria){
                                  if(categoria.id == contato.categoriaId){%>
                                       <option value="<%=categoria.id%>" selected><%=categoria.descricao%></option>
                                  <%}
                                    else{%>
                                       <option value="<%=categoria.id%>"><%=categoria.descricao%></option>
                                  <%}%>
                            <%})%>
                        </select>
                    </div>
                    <input type="hidden" name="id" value="<%=contato.id%>">
                    <input class="btn btn-primary" type="submit" value="Atualizar">
                    <a href="/contatos/lista" class="btn btn-warning">Lista de contatos</a>
                </form>
            </div>
        </div>
    </div>
    <%-include('../partials/footer'); %>
</body>
</html>